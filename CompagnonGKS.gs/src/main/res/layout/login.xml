<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_gks_stripes">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_login"
        android:padding="8dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="125dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/login_username"
            android:background="@drawable/bg_input_login"
            android:textColor="#ddd"
            android:padding="8dp"
            android:textSize="14dp"
            android:hint="Nom d'utilisateur"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/login_password"
            android:background="@drawable/bg_input_login"
            android:textColor="#ddd"
            android:padding="8dp"
            android:textSize="14dp"
            android:hint="************"
            android:singleLine="true"
            android:password="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo"
        android:padding="5dp"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enregistrement"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:background="#00000000"
            android:textColor="#66FFFFFF"
            android:textSize="14dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:id="@+id/btn_connexion"
            android:background="@drawable/bg_button"
            android:padding="10dp"
            android:layout_gravity="center"
            android:onClick="onLogin"
            android:textColor="@color/button_color"
            android:gravity="center_vertical"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/attention"
            android:layout_above="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ce programme n'est ni officiel, ni affilié à gks.gs"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="#66ffffff"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
