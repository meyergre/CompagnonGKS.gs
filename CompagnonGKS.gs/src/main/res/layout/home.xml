<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    tools:context=".MainActivity"
        android:background="#DDD">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:padding="5dp"
        android:id="@+id/linearLayout2">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/frameLayout4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/ic_up_mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--.-- Go"
            android:id="@+id/tx_upload"
            android:textColor="#555"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_marginLeft="3dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_down_mini"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--.-- Go"
            android:id="@+id/tx_download"
            android:textColor="#555"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/frameLayout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_karma_mini"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-.--"
            android:id="@+id/tx_karma"
            android:textColor="#555"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/frameLayout2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/ic_ratio_mini"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-.--"
            android:id="@+id/tx_ratio"
            android:textColor="#555"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/frameLayout3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/updateProgressBar"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateOnly="true"
            android:layout_marginTop="-8dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_bg"
            android:id="@+id/frameLayout5"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="true"
                android:id="@+id/linearLayout4"
                android:background="@drawable/bg_titre"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:id="@+id/tx_username"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="#555"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivAvatar"
                    android:src="@drawable/default_avatar"
                    android:layout_gravity="center"
                    android:layout_margin="3dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout3"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_alignParentLeft="true"
                    android:padding="3dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classe d'utilisateur :"
                            android:id="@+id/textView10"
                            android:textColor="#555"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classe"
                            android:id="@+id/tx_classe"
                            android:layout_gravity="center"
                            android:textColor="#007dc6"
                            android:textSize="14dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#BBB"></FrameLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/linearLayout">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/btn_messages"
                            android:src="@drawable/ic_mail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Messages reçus :"
                            android:id="@+id/textView"
                            android:textColor="#555"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="0"
                            android:id="@+id/tx_mails"
                            android:textColor="#444"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#BBB"
                        android:id="@+id/frameLayout9" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/linearLayout5" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/imageView6"
                            android:src="@drawable/ic_twit"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Twits :"
                            android:id="@+id/textView2"
                            android:textColor="#555"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="0"
                            android:id="@+id/tx_twit"
                            android:textColor="#444"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#BBB"
                        android:id="@+id/frameLayout10" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/linearLayout6" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/imageView8"
                            android:src="@drawable/ic_aura"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aura :"
                            android:id="@+id/textView3"
                            android:textColor="#555"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.000"
                            android:id="@+id/tx_aura"
                            android:textColor="#444"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#BBB"
                        android:id="@+id/frameLayout11" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/linearLayout7" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/imageView9"
                            android:src="@drawable/ic_hitrun"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hit \u0026 Run :"
                            android:id="@+id/textView4"
                            android:textColor="#555"
                            android:textSize="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="0"
                            android:id="@+id/tx_hitrun"
                            android:textColor="#444"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/www"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            android:layout_below="@+id/button"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>



</RelativeLayout>
    <ScrollView
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        android:background="@drawable/abc_ab_solid_light_holo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Mes messages"
                android:id="@+id/button"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical|left"
                android:background="@drawable/bg_button_menu"
                android:textColor="#FFFF8800"
                android:padding="9dp"
                android:textSize="16dp"
                android:onClick="dummyFunction"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Mon GKS Mobile"
                android:id="@+id/button2"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical|left"
                android:background="@drawable/bg_button_menu"
                android:textColor="#FFFF8800"
                android:padding="9dp"
                android:textSize="16dp"
                android:onClick="dummyFunction"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="GKS Images"
                android:id="@+id/button3"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical|left"
                android:background="@drawable/bg_button_menu"
                android:textColor="#FFFF8800"
                android:padding="9dp"
                android:textSize="16dp"
                android:onClick="dummyFunction"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Paramètres"
                android:id="@+id/button4"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical|left"
                android:background="@drawable/bg_button_menu"
                android:textColor="#FFFF8800"
                android:padding="9dp"
                android:textSize="16dp"
                android:onClick="onPreferencesClick" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="#FFFF8800"></FrameLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="À propos..."
                android:id="@+id/button5"
                android:gravity="center_vertical|left"
                android:background="@drawable/bg_button_menu"
                android:textColor="#FFFF8800"
                android:padding="9dp"
                android:textSize="16dp"
                android:onClick="onAboutClick" />
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>